extend ../../layout/default.pug

block main 
    if(role.permissions.includes("roles_create"))
        h1(class= "mb-4") Thêm Mới Sản Phẩm

        form(
            action=`${prefixAdmin}/roles/create`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tiêu Đề
                input(
                    type="type"
                    class="form-control" 
                    id="title"
                    name="title"
                    required
                )
            div(class="form-group")
                label(for="desc") Mô Tả
                input(
                    class="form-control" 
                    id="desc"
                    name="description"
                    rows=5
                )
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo Mới

        script(src="/admin/js/product.js")
        