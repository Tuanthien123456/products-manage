extend ../../layout/default.pug
include ../../mixins/show-alert.pug

block main 
    if(role.permissions.includes("roles_edit"))
        h1(class= "mb-4") Thêm Mới Sản Phẩm

        +alert(5000)
        +alert-error(5000)

        form(
            action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tiêu Đề
                input(
                    type="type"
                    class="form-control" 
                    id="title"
                    name="title"
                    required
                    value=data.title
                )
            div(class="form-group")
                label(for="desc") Mô Tả
                input(
                    class="form-control" 
                    id="desc"
                    name="description"
                    rows=5
                    value=data.description
                )
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập Nhật

        script(src="/admin/js/product.js")
    